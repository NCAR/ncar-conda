#!/bin/bash
#
#   This utility script can be used to update a particular deployed
#   environment, specified by name as the argument
#
#   Last Revised:   16:08, 24 Feb 2023
#

function usage {
cat << EOF
update_env [OPTIONS] ENV_NAME

Options
    --help              display this help information
    -f, --fixed         use fixed-versions YAML file (not from history)
EOF

exit ${1:-0}
}

while [[ $# -gt 0 ]]; do
    case $1 in
        --help)
            usage
            ;;
        -f|--fixed)
            fixed_versions=true
            fmin=2 fmax=3
            ;;
        *)
            env_name=$1
            ;;
    esac

    shift
done

function check_env_diff {
    echo "Checking current status of environment ..."
    conda env export $1 -n $env_name > .envdump.tmp

    if ! cmp -s <(sed -n '/channels:/,/dependencies:/{//!p}' $env_file) <(sed -n '/channels:/,/dependencies:/{//!p}' .envdump.tmp); then
        echo "Error: channels differ between current and proposed environments. Resolve first!"
        rm .envdump.tmp
        exit 1
    elif ! cmp -s <(sed -n '/dependencies:/,/prefix:/{//!p}' $env_file) <(sed -n '/dependencies:/,/prefix:/{//!p}' .envdump.tmp); then
        change_detected=yes
        printf "%-47s %s\n" "Old Packages" "New Packages" > $log_file
        printf -- '-%.0s' {1..100} >> $log_file
        echo >> $log_file
        diff -W100 -y .envdump.tmp $env_file >> $log_file
    fi
    
    rm .envdump.tmp

    if [[ ${change_detected:-no} == no ]]; then
        echo "No changes detected in current YAML file. Exiting."
        exit
    else
        echo -e "\n**** CHANGES ****\n"
        printf "%-49s %s\n" "Remove Packages" "Add Packages"
        printf -- '-%.0s' {1..100}; echo
        grep '[|<>]' $log_file
        echo
        read -e -p "Proceed with changes (y/N)? " make_changes
    fi

    if [[ YES != ${make_changes^^}* ]]; then
        rm $log_file
        exit
    fi

    conda env export -n $env_name > $repo_root/logs/revert_${env_name}_${datestamp}.yml
}

if [[ -z $env_name ]]; then
    >&2 echo "Error: need to specify an environment by name"
    usage 1
fi

# Prep work
repo_root="$( cd "$(dirname "$0")"/.. ; pwd )"

$repo_root/util/check_user || exit 1
$repo_root/util/check_repo || exit 1

. $repo_root/config/${NCAR_HOST}.cfg
cd $repo_root/envs

echo "Searching YAML catalog for $env_name ..."
env_file=$(find . -mindepth ${fmin:-1} -maxdepth ${fmax:-2} -type f -name ${env_name/.yml}.yml)

if [[ -n $env_file ]]; then
    echo " - Using YAML file: $env_file"
else
    >&2 echo "Error: no YAML file found for $env_name"
    exit 1
fi

# Use mamba for faster dependency resolution
mkdir -p $repo_root/logs
datestamp=$(date +%y%m%dT%H%M)
log_file=$repo_root/logs/updates_${env_name}_$datestamp

if [[ ${fixed_versions:-false} == true ]]; then
    check_env_diff
else
    check_env_diff --from-history
fi

# First remove packages, then add
remove_pkgs=$(grep '<' $log_file | awk '{print $2}' | xargs)
add_pkgs=$(grep '>' $log_file | awk '{print $NF}' | xargs)

if [[ -n $remove_pkgs ]]; then
    mamba uninstall -n $env_name $remove_pkgs |& tee -a $log_file
fi

if [[ -n $add_pkgs ]]; then
    mamba install -n $env_name $add_pkgs |& tee -a $log_file
fi
